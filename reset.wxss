ol, ul {
  display: block;
  margin-left: 1.3em;
}

ol {
  list-style-type: decimal;
}

ul {
  list-style-type: disc;
}

li {
  display: list-item;
  text-align: match-parent;
}

b {
  font-weight: bold;
}

picker {
  display: block !important;
  padding: 10px 28px 10px 15px;
}

picker .weui-cell__ft {
  position: absolute;
  right: 15px;
  top: 50%;
}
